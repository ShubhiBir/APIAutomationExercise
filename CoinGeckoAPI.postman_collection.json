			"name": "FetchBitcoinDetails",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"const jsonData = pm.response.json();",
							"pm.test(\"Response status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Verify 3 BPIs: EUR,USD,GBP\", function () {",
							"",
							"    const price = jsonData.market_data.current_price;",
							"    const currencies = ['usd', 'gbp', 'eur'];",
							"    currencies.forEach(currency => {",
							"        pm.expect(price).to.have.property(currency);",
							"    })",
							"",
							"});",
							"",
							"pm.test(\"Each cryptocurrency has aÂ  market cap, and total volume.\", function () {",
							"",
							"    const marketCap = jsonData.market_data.market_cap;",
							"    const totalVolume = jsonData.market_data.total_volume;",
							"    const currencies = ['usd', 'gbp', 'eur'];",
							"    currencies.forEach(currency => {",
							"        pm.expect(marketCap).to.have.property(currency);",
							"        pm.expect(totalVolume).to.have.property(currency);",
							"    })",
							"});",
							"",
							"pm.test(\"Verify response contains price_change_percentage_24h\", function () {",
							"    const price_change = jsonData.market_data.price_change_percentage_24h;",
							"    pm.expect(price_change).to.be.a(\"number\");",
							"",
							"});",
							"",
							"pm.test(\"Verify response contains homepage property\", function () {",
							"    const homePageUrl = jsonData.links;",
							"    pm.expect(homePageUrl).to.have.property('homepage');",
							"    pm.expect(homePageUrl.homepage).to.be.a('array').and.not.empty;",
							"    pm.expect(homePageUrl.homepage[0]).to.be.a('string').and.not.empty;",
							"});",
							""
						],
